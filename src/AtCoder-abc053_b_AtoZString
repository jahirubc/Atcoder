import java.util.*;

public class Main
{
	public static void main(String[] args) {
	    Scanner sc = new Scanner(System.in);
	    String S = sc.next();
	   
	    int A = -1;
	    int Z = -1;
	    for (int i = 0; i < S.length(); i++){
	        if ( S.charAt(i) == 'A' && A == -1){
	            A=i;
	         }
	         if (S.charAt(i) == 'Z') {
              Z = i;
	         }
	    }
        int result = Z - A + 1;
        System.out.println(result);
    }
}
